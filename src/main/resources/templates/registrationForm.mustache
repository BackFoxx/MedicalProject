{{>layout/header}}
{{>layout/nav}}
<style>
    .container {
      max-width: 960px;
    }
</style>
{{#error}}
    <script type="text/javascript">
        alert("{{error}}");
        location.href = "/";
    </script>
{{/error}}

<div class="container">
    <main>
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
            <h2>회원가입</h2>
            <p class="lead">모든 입력항목은 필수 사항입니다.</p>
        </div>

        <div class="row g-3">
            <div>
                <h4 class="mb-3">유저 정보</h4>
                <form action="/registration" method="post" class="needs-validation" novalidate>

                    <div class="row g-3">
                        <div class="col-12">
                            <label for="username" class="form-label">유저네임</label>
                            <div class="input-group has-validation">
                                <span class="input-group-text">@</span>
                                <input type="text" class="form-control" name="username" placeholder="유저네임" value="{{#userForm}}{{userForm.username}}{{/userForm}}" required>
                                <div class="invalid-feedback">
                                    하하
                                </div>
                            </div>
                        </div>
                        {{#usernameErrorMessage}}
                            <div class="alert alert-secondary" role="alert">
                                {{usernameErrorMessage}}
                            </div>
                        {{/usernameErrorMessage}}

                        <div class="col-12">
                            <label for="email" class="form-label">이메일</label>
                            <input type="email" class="form-control" name="email" value="{{#userForm}}{{userForm.email}}{{/userForm}}" placeholder="you@example.com">
                            <div class="invalid-feedback">
                                히히
                            </div>
                        </div>
                        {{#emailErrorMessage}}
                            <div class="alert alert-secondary" role="alert">
                                {{emailErrorMessage}}
                            </div>
                        {{/emailErrorMessage}}

                        <div class="col-12">
                            <label for="password" class="form-label">비밀번호</label>
                            <input type="password" class="form-control" name="password" placeholder="비밀번호">
                            <div class="invalid-feedback">
                                히히
                            </div>
                        </div>
                        {{#passwordErrorMessage}}
                            <div class="alert alert-secondary" role="alert">
                                {{passwordErrorMessage}}
                            </div>
                        {{/passwordErrorMessage}}

                    <hr class="my-4">

                    <h4 class="mb-3">권한 정하기</h4>

                    <div class="my-3">
                        <div class="form-check">
                            <label class="form-check-label"><input value="user" name="roleName" type="radio" class="form-check-input" checked required> 일반 유저</label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label"><input value="doctor" name="roleName" type="radio" class="form-check-input" required> 의료인</label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label"><input value="admin" name="roleName" type="radio" class="form-check-input" required> 관리자</label>
                        </div>
                    </div>

                    <hr class="my-4">

                    <button class="w-100 btn btn-primary btn-lg" type="submit">회원가입</button>
                </form>
            </div>
        </div>
    </main>
</div>

{{>layout/footer}}